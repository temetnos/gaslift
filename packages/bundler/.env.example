# Server
NODE_ENV=development
PORT=3002
LOG_LEVEL=debug

# Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=gaslift_bundler
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?schema=public

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}

# Ethereum
ETH_RPC_URL=http://localhost:8545
CHAIN_ID=84532  # Base Sepolia
ENTRY_POINT_ADDRESS=0x5FF137D4b0FDCD49DcA30c7CF57E578a026d2789
BUNDLER_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# Monitoring
PROMETHEUS_METRICS_ENABLED=true
PROMETHEUS_METRICS_PORT=9091

# Security
API_KEYS=test-api-key,another-test-key
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Bundler
BUNDLER_BENEFICIARY=0x0000000000000000000000000000000000000000
BUNDLER_MIN_STAKE=100000000000000000  # 0.1 ETH
BUNDLER_MIN_UNSTAKE_DELAY=86400  # 24 hours
BUNDLER_MIN_SIGNER_BALANCE=50000000000000000  # 0.05 ETH

# Gas
MIN_PRIORITY_FEE_PER_GAS=1000000000  # 1 gwei
MAX_PRIORITY_FEE_PER_GAS=3000000000  # 3 gwei
PRIORITY_FEE_INCREMENT=100000000  # 0.1 gwei
MIN_GAS_PRICE_BUFFER_PERCENT=10

# Health Check
HEALTH_CHECK_INTERVAL_MS=30000
HEALTH_CHECK_TIMEOUT_MS=10000
